<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="bottom">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent">

                <ImageButton
                    android:id="@+id/iButtonSait"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@color/colorAccent2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/site_final"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iButtonMail"
                    app:layout_constraintTop_toTopOf="@+id/iButtonVK" />

                <ImageButton
                    android:id="@+id/iButtonVK"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="30dp"
                    android:background="?attr/actionBarItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/vk_final"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintHorizontal_bias="0.891"
                    app:layout_constraintStart_toEndOf="@+id/iButtonHome" />


                <ImageButton
                    android:id="@+id/iButtonMail"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:background="?attr/actionBarItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mail_final"
                    app:layout_constraintEnd_toStartOf="@+id/iButtonSait"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/iButtonVK" />

                <ImageButton
                    android:id="@+id/iButtonHome"
                    android:layout_width="0dp"

                    android:layout_height="45dp"
                    android:background="@color/colorAccent2"
                    android:contentDescription="Button Home"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_final"
                    app:layout_constraintEnd_toStartOf="@+id/iButtonVK"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iButtonVK" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50121653" />


        </android.support.constraint.ConstraintLayout>
        <ImageButton
            android:id="@+id/iButtonPhone"
            android:layout_width="82dp"
            android:layout_height="74dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="?attr/actionBarItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/call_finish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>

